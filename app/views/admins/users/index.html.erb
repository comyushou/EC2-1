<h3>会員一覧</h3>

<table>
	<thead>
		<tr>
			<th>会員ID</th>
			<th>氏名</th>
			<th>メールアドレス</th>
			<th>ステータス</th>
		</tr>
	</thead>

	<% @users.each do |user| %>
	<tbody>
		<tr>
			<td>
				<%= user.id %>
			</td>
			<td>
				<%= link_to admins_user_path(user) do %>
				<%= user.family_name %>
				<%= user.first_name %>
				<% end %>
			</td>
			<td>
				<%= user.email %>
			</td>
			<td>
				<% if user.is_active %>
					有効
				<% else %>
					退会済
				<% end %>

			</td>
		</tr>

	</tbody>
	<% end %>
</table>
