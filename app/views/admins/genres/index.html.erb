<h3>ジャンル一覧：追加</h3>

    <%= form_for(@genre,url:"/admins/genres") do |f| %>
      ジャンル <%= f.text_field :name %>
	  <label><%= f.radio_button :is_status, "true" %>有効</label>
	  <lavel><%= f.radio_button :is_status, "false" %>無効</lavel>
      <%= f.submit "追加" %>
    <% end %><br>



  <table border="1">
  	<thead>
  		<tr>
  			<th>ジャンル</th>
  			<th>状態</th>
  			<th></th>
  		</tr>
  	</thead>

  		<% @genres.each do |genre| %>
  		<tr>
  			<td><%= genre.name %></td>
  			<td><% if genre.is_status  == true %>
              有効
            <% else %>
              無効
            <% end %>
        </td>
        <td><%= link_to "編集する",edit_admins_genre_path(genre.id) %></td>
  		</tr>
  		<% end %>

  </table>


