<div class="container admin-container">

  <h4 style ="margin-top:100px;margin-bottom:50px;margin-left:70px;"><span style="background-color:#ffcc99">　注文履歴一覧　</span></h4>

<center>

  <div class="ordertable">
  <table class ="table">
  	<thead>
  		<tr class="active">
  			<th>購入日時</th>
  			<th>購入者</th>
  			<th>注文個数</th>
  			<th>注文ステータス</th>
  		</tr>
  	</thead>

  	<% @orders.each do |order| %>
  	    <tr>
  	    	<td><%= link_to admins_order_path(order.id), class: "ordername" do %><span class="ordername"><%= order.created_at.strftime('%Y-%m-%d %H:%M:%S') %></span><% end %></td>


  	    	<td><%= order.user.family_name %><%= order.user.first_name %></td>
  	    	<td><%= order.totalunit %></td>
  	    	<td><%= order.order_status %></td>
  	    </tr>
  	<% end %>

  </table>
  </div>

</center>

</div>
