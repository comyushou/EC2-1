<h4>注文履歴一覧</h4>

<center>

  <table>
  	<thead>
  		<tr>
  			<th>購入日時</th>
  			<th>購入者</th>
  			<th>注文個数</th>
  			<th>注文ステータス</th>
  		</tr>
  	</thead>

  	<% @orders.each do |order| %>
  	    <tr>
  	    	<td><%= link_to admins_order_path(order.id) do %><%= order.created_at.strftime('%Y-%m-%d %H:%M:%S') %><% end %></td>


  	    	<td><%= order.user.family_name %><%= order.user.first_name %></td>
  	    	<td><%= order.totalunit %></td>
  	    	<td><%= order.order_status %></td>
  	    </tr>
  	<% end %>

  </table>

</center>
