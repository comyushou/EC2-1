<h3>新規登録</h3>



  <%= form_for(@item,url:admins_items_path) do |f| %>

    画像　<img src="/assets/sara.jpg" alt="新規登録する画像を選択してください" style="width:50px; height:50px;">

    <%= f.attachment_field :picture %>

    ここで分割<br>

    商品名 <%= f.text_field :name %><br>
	商品説明<%= f.text_area :description %><br>

	ジャンル
	<%= f.collection_select :genre_id,Genre.all,:id,:name,:include_blank => "選択してください" %><br>

	税抜価格<%= f.text_field :price %>円<br>

	販売ステータス
	<%= f.select :is_sale_status,[["有効","true"],["無効","false"]],:include_blank =>"選択してください" %>

    <p><%= f.submit "新規登録" %><p>
  <% end %>