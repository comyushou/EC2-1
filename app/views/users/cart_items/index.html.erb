<div class="container cart_item_container">
	<div class="row">
		<div class="col-xs-12 " >
			<h2>ショッピングカート</h2>
		</div>
		<div class="col-xs-8 " >
		 <%= link_to "カートを空にする", users_destroy_cart_path, method: :delete, class: "btn btn-danger" %>
		</div>
	<div class="row">
		<div class="col-xs-8 " >
		 <table border="1" width="1000">
			<thead>
				<tr class="cart_top">
					<th>商品名</th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
			 <% @cart_items.each do |cart_item| %>
			  	<tr>
			  		<td>
			  			<%= link_to users_item_path(cart_item.item) do %>
				  			<%= attachment_image_tag(cart_item.item, :picture, :fill, 100, 100) %>
				  			<%= cart_item.item.name %>
			  			<% end %>
			  		</td>
			  		<td>
			  			<% item_price = cart_item.item.price.to_i * 1.1%> 
						¥<%= item_price.to_i %><br>
			  		</td>
			  		<td>
			  			<%= form_with model: cart_item, url: users_cart_item_path(cart_item), local: true do |f| %>
			  				<%= f.number_field :unit, min:1, max:99  %>
			  				<%= f.submit "変更", class: "btn btn-primary" %>
			  		</td>
			  		<td>
			  			<%= item_total = item_price.to_i * cart_item.unit %>円</td>
			  			<% @number = @number + item_total %>
			  		</td>
			  		<td>
			  			<%= link_to "削除する", users_path(cart_item), method: :delete, class: "btn btn-danger"%>
			  		</td>
			  			<% end %>
			  	</tr>
			<% end %>

			</tbody>
		 </table>
		</div>
	</div>
	</div>
</div>

	<div class="row">
		<div class="col-xs-3">
			<table class="table table_buy">
				<table border="0">
				<tr>
					<td><%= link_to "買い物を続ける", users_items_path, class: "btn btn-primary" %></td>
				</tr>
				</table>
			</table>
		</div>
		<div class="col-xs-5">
		 <table border="1" width="320" height="70">
		 	<tr>
		 		<th>
		 			合計金額
		 		</th>
		 		<td><%= @number %>円</td>
		 	</tr>
		 </table>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-5">
		</div>
		<div class="col-xs-7">
			<%= link_to "情報入力に進む", new_users_order_path, class: "btn btn-success btn-lg" %>
		</div>
	</div>
