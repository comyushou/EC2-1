<div class="container top-container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'layouts/genreslist' %>
		</div>
			<div class="col-xs-9">
				<div class="main-content">
					<div class="main-image">
						<img src="/assets/holl-cake" style="width:600px; height:400px;">
						<div class="main-text">
						大切なひとときを<br>
						ながのケーキと共に...
						</div>
					</div>
				</div>
				<div class="order-show">
					<h2>おすすめ商品</h2>
					<div class="product-box clearfix">
						<% @itemitems.each do |item| %>
							<div class="product-image">
							  <% if item.genre.is_status == true %>
								<%= link_to users_item_path(item) do %>
									<%= attachment_image_tag item, :picture,:fill,130,130,format:'jpg'%>
								<% end %>
						      <% end %>
								<div class="product-comment">
									<div class="product-name"><%= item.name %></div>
									<div class="product-price">¥<%= (item.price.to_i * 1.1).round %>
									</div>
								</div>
							</div>
						<% end %>
						<%= link_to 'もっと見る>', users_items_path, class: "user-item-index" %>
					</div>
				</div>

			</div>
	</div>
</div>



