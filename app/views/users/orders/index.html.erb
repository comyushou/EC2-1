<div class="container order-history-container">
	<span class="order-history-headline">注文情報一覧</span><br>
		<table class="order-history">
			<thead>
				<tr class="tr-box">
					<th class="create th-box">注文日</th>
					<th class="user th-box">配送先</th>
					<th class="product th-box">注文商品</th>
					<th class="price th-box">支払金額</th>
					<th class="status th-box">ステータス</th>
					<th class="show-page th-box">注文詳細</th>
				</tr>
			</thead>
			<tbody>

				<% @orders.each do |order| %>
				<tr class="tr-box">
					<td class="history-create td-box"><%= order.created_at.strftime('%Y/%m/%d') %></td>
					<td class="history-user td-box"><%= order.postal_code %><br>
						<%= order.address %><br>
						<%= order.review_name %>
					</td>
					<td class="history-product td-box">
					<% order.order_items.each do |order_item| %>
							<%= order_item.item.name %><br>
					<% end %>
					</td>
					<td class="history-price td-box"><%= order.billing_amount.to_i + 800 %>円</td>
					<td class="history-status td-box"><%= order.order_status %></td>
					<!-- orderの中でorderにアソシエーションしているorder_itemを回す -->

					<td class="history-show td-box"><%= link_to '表示する', users_order_item_path(order), class: "btn btn-primary" %>
					</td>
					</tr>
				<% end %>

			</tbody>
		</table>
</div>
