<h2>注文履歴一覧</h2>
<table class="order-history">
	<thead>
		<tr>
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
			<td><%= order.create_at('%Y/%m/%d') %></td>
			<td><%= order.postal_code %><br>
				<%= order.address %><br>
				<%= order.family_name %><%= order.first_name %>
			</td>
			<td><%= order.order_status %></td>
			<% order.order_items.each do |order_item| %>
				<tr>
					<td><%= order_item.item.name %></td>
				</tr>
			<% end %>
			<td><%= link_to '表示する', user_order_path(order) %>
			</td>
		<% end %>
	</tbody>
</table>
