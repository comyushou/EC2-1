<h1>注文情報</h1>
<h3>注文情報</h3>
<table class="order-box1">
	<tr>
		<th>注文日</th>
		<th><%= @order.create_at.strftime('%Y/%m/%d') %></th>
	</tr>
	<tr>
		<th>配送先</th>
		<th>〒<%= @order.postal_code %><br>
			<%= @order.address %><br>
			<%= @order.family_name %><%= @order.first_name %>
		</th>
	</tr>
	<tr>
		<th>支払方法</th>
		<th><%= @order.is_payment_method %></th>
	</tr>
	<tr>
		<th>ステータス</th>
		<th><%= @order.order_status %></th>
	</tr>
</table>
<h3>請求情報</h3>
<table class="order-box2">
	<tr>
		<th>商品合計</th>
		<th><%= @order.billing_amount %></th>
	</tr>
	<tr>
		<th>配送料</th>
		<th><%= @order.postage %>円</th>
	</tr>
	<tr>
		<th>ご請求金額</th>
		<th><%= @order.billing_amount.to_i + @order.postage.to_i %>円</th>
	</tr>
</table>
<table class="order-box3">
	<thead>
		<tr>
			<th>商品</th>
			<th>単価 (税込)</th>
			<th>個数</th>
			<th>小計</th>
		</tr>
	</thead>
	<tbody>
		<% @order_items.each do |order_item| %>
			<tr>
				<td><%= order_item.item.name %></td>
				<td><%= order_item.price %></td>
				<td><%= order_item.unit %></td>
				<td><%= order_item.price.to_i * order_item.unit.to_i %></td>
			</tr>
		<% end %>
	</tbody>
</table>