<div class="container password-container">
  <span class="password-headline">パスワード変更</span>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field password-form">新しいパスワード
      <% f.label :password, "New password" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-password" %>
    </div>

    <div class="field">確認パスワード
      <% f.label :password_confirmation, "Confirm new password" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-password" %>
    </div>

    <div class="actions">
      <%= f.submit "パスワードを変更", class: "btn  btn-success password-success" %>
    </div>
  <% end %>

  <div class="link-box">
    <%= link_to 'ログイン', new_user_session_path(resource_name) %>
    |
    <%= link_to "会員登録", new_registration_path(resource_name) %>
  </div>
</div>
