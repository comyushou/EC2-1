<div class="container password-container">
	<span class="password-headline">パスワードを忘れてしまった方</span>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  		<%= render "devise/shared/error_messages", resource: resource %>

  		<div class="field password-email">メールアドレス
   			<% f.label :email %><br />
    		<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email-password" %>
  		</div>

  		<div class="actions">
    		<%= f.submit "パスワードをリセットする", class: "btn btn-success" %>
  		</div>
	<% end %>

	<div class="link-box">
		<%= link_to 'ログイン', new_user_session_path(resource_name) %>
		|
		<%= link_to "会員登録", new_registration_path(resource_name) %>
	</div>
</div>