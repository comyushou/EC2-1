<h2>配送先登録/一覧</h2>

<%= form_for @address, url: users_addresses_path do |f| %>

	<table class="table">
		<tr>
			<th>郵便番号（ハイフンなし）</th>
			<td>
				<%= f.text_field :postal_code %>
			</td>
		</tr>
		<tr>
			<th>住所</th>
			<td>
				<%= f.text_field :address %>
			</td>
		</tr>
		<tr>
			<th>宛名</th>
			<td>
				<%= f.text_field :name %>
			</td>
			<td>
				<%= f.submit "登録する" %>
			</td>
		</tr>
	</table>
<% end %>

	<table class="table">
		<thead>
			<tr>
				<th>郵便番号</th>
				<th>住所</th>
				<th>宛名</th>
			</tr>
		</thead>
		<% @addresses.each do |address| %>
			<tbody>
				<tr>
					<td><%= address.postal_code %></td>
	      			<td><%= address.address %></td>
	      			<td><%= address.name %></td>
	      			<td><%= link_to "編集する", edit_users_address_path(address) %></td>
	      			<td><%= link_to "削除する", users_address_path(address), method: :delete %></td>
				</tr>
			</tbody>
		<% end %>
	</table>

