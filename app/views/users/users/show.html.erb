<h2>マイページ</h2>

<div class="information">登録情報
	<%= link_to '編集する', users_edit_path %>
	<%= link_to 'パスワードを変更する' %>
	<table class="user-table">
		<tr>
			<td>氏名</td>
			<td><%= @user.family_name %><%= @user.first_name %></td>
		</tr>
		<tr>
			<td>カナ</td>
			<td><%= @user.kana_family_name %><%= @user.kana_first_name %></td>
		</tr>
		<tr>
			<td>郵便番号</td>
			<td><%= @user.postal_code %></td>
		</tr>
		<tr>
			<td>住所</td>
			<td><%= @user.address %></td>
		</tr>
		<tr>
			<td>電話番号</td>
			<td><%= @user.phone_number %></td>
		</tr>
		<tr>
			<td>メールアドレス</td>
			<td><%= @user.email %></td>
		</tr>
	</table>

		<div class="shipping-address">配送先
			<%= link_to "一覧を見る", users_addresses_path %>
		</div>
		<div class="order-history">注文履歴
			<%= link_to "一覧を見る", users_order_items_path %>
		</div>