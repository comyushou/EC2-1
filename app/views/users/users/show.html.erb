<div class="container mypage-container">
	<div class="row">
		<div class="col-md-6">
	<span class="mypage-headline">マイページ</span><br>
		<div class="information-button">
			<span class="information">登録情報</span>
			<%= link_to '編集する', users_mypage_edit_path, class: "btn btn-primary" %>
			<%= link_to 'パスワードを変更する', new_user_password_path(current_user), class: "btn btn-primary" %>
		</div>
	<table class="user-table">
		<tr>
			<td class="left-td">氏名</td>
			<td class="right-td"><%= @user.family_name %><%= @user.first_name %></td>
		</tr>
		<tr>
			<td class="left-td">カナ</td>
			<td class="right-td"><%= @user.kana_family_name %><%= @user.kana_first_name %></td>
		</tr>
		<tr>
			<td class="left-td">郵便番号</td>
			<td class="right-td"><%= @user.postal_code %></td>
		</tr>
		<tr>
			<td class="left-td">住所</td>
			<td class="right-td"><%= @user.address %></td>
		</tr>
		<tr>
			<td class="left-td">電話番号</td>
			<td class="right-td"><%= @user.phone_number %></td>
		</tr>
		<tr>
			<td class="left-td">メールアドレス</td>
			<td class="right-td"><%= @user.email %></td>
		</tr>
	</table>

		<div class="shipping-address">配送先
			<%= link_to "一覧を見る", users_addresses_path, class: "btn btn-primary shipping" %>
		</div>
		<div class="order-history">注文履歴
			<%= link_to "一覧を見る", users_order_items_path, class: "btn btn-primary history" %>
		</div>
	</div>
	</div>
</div>