<div class="sign_up_box">
<span class="sign_up" style="background-color: #dcdcdc;">新規会員登録</span>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">名前
    <%= f.label :family_name, "(姓)" %>
    <%= f.text_field :family_name, autofocus: true, class: "family_name" %>

    <%= f.label :first_name, "(名)" %>
    <%= f.text_field :first_name, autofocus: true, class: "first_name" %>
  </div>

  <div class="field">フリガナ
    <%= f.label :kana_family_name, "(セイ)" %>
    <%= f.text_field :kana_family_name, autofocus: true, class: "kana_family_name" %>

    <%= f.label :kana_first_name, "(メイ)" %>
    <%= f.text_field :kana_first_name, autofocus: true, class: "kana_first_name" %>
  </div>

  <div class="field">メールアドレス
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">郵便番号(ハイフンなし)
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">住所(6文字以上)
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">電話番号(ハイフンなし)
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="field">パスワード
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">パスワード(確認用)
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>


<%= render "devise/shared/links" %>
</div>
