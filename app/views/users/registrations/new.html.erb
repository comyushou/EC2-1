<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">


    <%= f.label :family_name, "(姓)" %><br />
    <%= f.text_field :family_name, autofocus: true, class: "family_name" %>
  </div>

  <div class="field">
    <%= f.label :first_name, "(名)" %><br />
    <%= f.text_field :first_name, autofocus: true, class: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :kana_family_name, "(セイ)" %><br />
    <%= f.text_field :kana_family_name, autofocus: true, class: "kana_family_name" %>
  </div>

  <div class="field">
    <%= f.label :kana_first_name, "(メイ)" %><br />
    <%= f.text_field :kana_first_name, autofocus: true, class: "kana_first_name" %>
  </div>

  <div class="field">

    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>


  <div class="field">

  <div class="field">郵便番号(ハイフンなし)
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">住所(6文字以上)
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">電話番号(ハイフンなし)
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="field">パスワード(6文字以上)

    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
